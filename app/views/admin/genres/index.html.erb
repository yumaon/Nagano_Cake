<div class="container">
  <div class="row my-4">
    <div class="col-md-4">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>

  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <div class="row">
    <div class="col-md-12 col-form-label">
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, class: "ml-5" %>
      <%= f.submit '新規登録', class: "ml-5 btn btn-success btn-sm px-3" %>
    </div>
  </div>
  <% end %>

  <div class="row mt-5">
    <div class="col-md-4">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th class="text-center">ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="align-middle"><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
