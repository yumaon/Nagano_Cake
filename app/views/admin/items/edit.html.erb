<h3>商品編集</h3>
<%= form_with model: @item, url: admin_item_path  do |f| %>
  <label for="inputImage">商品画像</label>
  <%= f.file_field :image, accept: "image/*" %>
  <label for="inputName">商品名</label>
  <%= f.text_field :name, id: "inputName" %>
  <label for="inputIntroduction">商品説明</label>
　<%= f.text_area :introduction, id: "inputIntroduction" %>
　<label for="inputGenre">ジャンル</label>
　<%= f.collection_select :genre_id, Genre.all, :id, :name, id: "inputGenre" %>
　<label for="inputPrice">税抜価格</label>
　<%= f.text_field :price, id: "inputPrice" %>円
　<label for="inputStatus">販売ステータス</label>
　<%= f.radio_button :is_active, :true %>
  <%= f.label :is_active_true, "販売中" %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active_false, "販売停止中" %>
  <%= f.submit "変更を保存" %>
<% end %>
