<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"><span>ながのCAKE</span></a>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "商品一覧", admin_items_path %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧", admin_customers_path %>
              </li>
              <li class="nav-item">
                <%= link_to "注文履歴一覧", admin_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ジャンル一覧", admin_genres_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>
              <div class="search-form">
              <%= form_with url: admin_items_search_path, method: :get do |f| %>
                <%= f.text_field :keyword, value: @keyword, placeholder: 'Search' %>
                <%= f.submit "検索" %>
              <% end %>
              </div>
            <% elsif customer_signed_in? %>
              <li class="nav-item">
                <%= link_to "マイページ", customers_my_page_path %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", items_path %>
              </li>
              <li class="nav-item">
                <%= link_to "カート", cart_items_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
              </li>
              <div class="search-form">
              <%= form_with url: public_items_search_path, method: :get do |f| %>
                <%= f.text_field :keyword, value: @keyword, placeholder: 'Search' %>
                <%= f.submit "検索" %>
              <% end %>
              </div>
            <% else %>
              <li class="nav-item">
                <%= link_to "About" , about_path %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", items_path %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path %>
              </li>
              <div class="search-form">
              <%= form_with url: public_items_search_path, method: :get do |f| %>
                <%= f.text_field :keyword, value: @keyword, placeholder: 'Search' %>
                <%= f.submit "検索" %>
              <% end %>
              </div>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
