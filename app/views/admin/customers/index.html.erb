<div class="container">
  <div class="row my-4">
    <div class="col-md-4">
      <h3>会員一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 mt-2">
      <table class="table table-hover border-bottom">
        <thead>
          <tr class="table-secondary">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
               <%= customer.id %>
              </td>
              <td>
                <%= link_to customer.name_display, admin_customer_path(customer.id), class: "text-dark" %>
              </td>
              <td>
                <%= customer.email %>
              </td>
              <td>
                <% if customer.is_deleted == false %>
                <span class="text-success"><strong>有効</strong></span>
                <% else %>
                <span class="text-black-50"><strong>退会</strong></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 d-flex justify-content-center">
      <%= paginate @customers %>
    </div>
  </div>
</div>