<div class="container-fluid">
  <div class="row mx-4 pt-5">
    <%= render 'genres_list', genres:@genres %>
    <div class="col-md-9 offset-md-1">
      <div class="mb-3">
        <h3><%= @list_name %> <span class="h5">(全<%= @items.total_count %>件)</span></h3>
      </div>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>

          <%= link_to item_path(item.id) do %>
            <div class="mx-2">
              <%= image_tag item.image, size: "270x200" %>
              <p><%= item.name %></p>
              <p>¥<%= item.with_tax_price.to_s(:delimited) %></p>
            </div>
          <% end %>

        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>

  </div>
</div>