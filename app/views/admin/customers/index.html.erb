<h3>会員一覧</h3>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td>
         <%= customer.id %>
        </td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %>
            <%= customer.first_name %>
          <% end %>
        </td>
        <td>
          <%= customer.email %>
        </td>
        <td>
          <%= customer.is_deleted ? '退会' : '有効' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>