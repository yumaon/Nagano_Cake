<div class="container-fluid">
  <div class="row ml-5 mt-4">
    <h3 class="ml-5">配送先登録/一覧</h3>
  </div>

  <div class="my-3">
    <div class="row ml-5 mt-3">
      <div class="col-md-7">
      <%= form_with model: @address do |f| %>

        <div class="form-group row">
          <div class="col-md-3">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-form-label" %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :postal_code, placeholder: "0000000" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3">
            <%= f.label :address, "住所", class: "col-form-label" %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-md-8" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3">
            <%= f.label :name, "宛名" , class: "col-form-label" %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :name, placeholder: "令和道子" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3">
          </div>
          <div class="col-md-9">
            <%= f.submit "新規登録", class: "btn btn-success px-5" %>
          </div>
        </div>

    <% end %>
    </div>
  </div>
  <div class="row ml-5 mt-4">
    <div class="col-md-6">
      <table class="table table-bordered">
        <thead>
          <tr class="table-secondary">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td>
                <%= address.postal_code %>
              </td>
              <td>
                <%= address.address %>
              </td>
              <td>
                <%= address.name %>
              </td>
              <td class="text-center">
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success mr-3" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>