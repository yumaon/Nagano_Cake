<div class="container mt-5">
  <div class="row ml-5">
    <h3>新規会員登録</h3>
  </div>

  <div class="my-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="form-group row">
        <div class="col-md-3">
          <p class="col-form-label">名前</p>
        </div>
        <div class="col-md-9">
          <%= f.label :last_name, "(姓)", class: "mr-4" %>
          <%= f.text_field :last_name, placeholder: "令和" %>
          <%= f.label :first_name, "(名)", class: "mx-4" %>
          <%= f.text_field :first_name, placeholder: "道子" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <p class="col-form-label">フリガナ</p>
        </div>
        <div class="col-md-9">
          <%= f.label :last_name_kana, "(セイ)", class: "mr-2" %>
          <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
          <%= f.label :first_name_kana, "(メイ)", class: "ml-4 mr-2" %>
          <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :email, "メールアドレス", class: "col-form-label" %>
        </div>
        <div class="col-md-9">
          <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: "col-md-3" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-form-label" %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :postal_code, placeholder: "0000000", class: "col-md-3" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :address, "住所", class: "col-form-label" %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-6" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-form-label" %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :telephone_number, placeholder: "0000000000", class: "col-md-3" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :password, "パスワード(6文字以上)", class: "col-form-label" %>
        </div>
        <div class="col-md-9">
          <%= f.password_field :password, autocomplete: "new-password", class: "col-md-3" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-form-label" %>
        </div>
        <div class="col-md-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-3" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3"> </div>
        <div class="col-md-9">
          <%= f.submit "新規登録", class: "col-sm-1 btn btn-success col-md-3" %>
        </div>
      </div>
    <% end %>
    <div class="row ml-5 mt-5">
      <h3>既に登録済みの方</h3>
    </div>
    <div class="row ml-5 pl-5 mt-3">
      <p class="ml-5"><%= link_to "　こちら　", new_customer_session_path %>からログインしてください。</p>
    </div>
  </div>
