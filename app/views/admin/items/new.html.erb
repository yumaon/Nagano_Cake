<div class="container">
  <div class="row my-4">
    <div class="col-md-4">
      <h3>商品新規登録</h3>
    </div>
  </div>
  <%= form_with model: @item, url: admin_items_path do |f| %>

  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :image, "商品画像" %>
    </div>
    <div class="col-md-9 col-form-label">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :name, "商品名" %>
    </div>
    <div class="col-md-9 col-form-label">
      <%= f.text_field :name, placeholder: '商品名', size: "40" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :introduction, "商品説明" %>
    </div>
    <div class="col-md-9 col-form-label">
      <%= f.text_area :introduction, placeholder: 'ここに説明文を記述します', size: "40x8" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :genre_id, "ジャンル" %>
    </div>
    <div class="col-md-9 col-form-label">
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: '--選択してください--' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :price, "税抜価格" %>
    </div>
    <div class="col-md-9 col-form-label">
      <%= f.text_field :price, placeholder: '1000', size: "40" %>円
    </div>
  </div>

  <div class="form-group row col-form-label">
    <div class="col-md-3">
      <%= f.label :is_active, "販売ステータス" %>
    </div>
    <div class="col-md-9">
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active_true, "販売中", class: "mr-4" %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active_false, "販売停止中" %>
    </div>
  </div>

  <div class="form-group row col-form-label">
    <div class="col-md-3">
    </div>
    <div class="col-md-9">
      <%= f.submit '新規登録', class: "btn btn-success px-4" %>
    </div>
  </div>
  <% end %>
</div>