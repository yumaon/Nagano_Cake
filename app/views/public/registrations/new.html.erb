<div class="container-fluid ml-5 pl-5 my-4">
  <div class="row ml-5">
    <h3>新規会員登録</h3>
  </div>
</div>

<div class="container-fluid ml-5 pl-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="form-group row">
      <p class="col-sm-2 col-form-label">名前</p>
      <%= f.label :last_name, "(姓)", class: "mr-4" %>
      <%= f.text_field :last_name, placeholder: "令和" %>
      <%= f.label :first_name, "(名)", class: "mx-4" %>
      <%= f.text_field :first_name, placeholder: "道子" %>
    </div>

    <div class="form-group row">
      <p class="col-sm-2 col-form-label">フリガナ</p>
      <%= f.label :last_name_kana, "(セイ)", class: "mr-2" %>
      <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
      <%= f.label :first_name_kana, "(メイ)", class: "ml-4 mr-2" %>
      <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
    </div>

    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %>
    </div>

    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :postal_code, placeholder: "0000000" %>
    </div>

    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-5" %>
    </div>

    <div class="form-group row">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :telephone_number, placeholder: "0000000000" %>
    </div>

    <div class="form-group row ">
      <%= f.label :password, "パスワード(6文字以上)", class: "col-sm-2 col-form-label" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-2 col-form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 col-form-label"></div>
      <%= f.submit "新規登録", class: "col-sm-1 btn btn-success" %>
    </div>
  <% end %>
</div>

<div class="container-fluid ml-5 pl-5 my-4">
  <div class="row ml-5">
    <h3>既に登録済みの方</h3>
  </div>
  <div class="row ml-5 mt-3 pl-5">
    <p><%= link_to "　こちら　", new_customer_session_path %>からログインしてください。</p>
  </div>
</div>
