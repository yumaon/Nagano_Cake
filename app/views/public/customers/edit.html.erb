<div class="container mt-5">
  <div class="row ml-5">
    <h3>会員情報編集</h3>
  </div>

  <div class="my-3">
    <%= form_with model: @customer, url: customers_information_path do |f| %>
      <div class="form-group row">
        <div class="col-md-3">
          <p class="col-form-label">名前</p>
        </div>
        <div class="col-md-9">
          <%= f.text_field :last_name, placeholder: "姓", class: "mr-4" %>
          <%= f.text_field :first_name, placeholder: "名" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <p class="col-form-label">フリガナ</p>
        </div>
        <div class="col-md-9">
          <%= f.text_field :last_name_kana, class: "mr-4" %>
          <%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-form-label" %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :postal_code, class: "col-md-3" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :address, "住所", class: "col-form-label" %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :address, class: "col-sm-6" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-form-label" %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :telephone_number, class: "col-md-3" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :email, "メールアドレス", class: "col-form-label" %>
        </div>
        <div class="col-md-9">
          <%= f.email_field :email, autocomplete: "email", class: "col-md-3" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3 text-center"></div>
        <div class="col-md-4">
          <%= f.submit "変更内容を保存", class: "btn btn-success px-5" %>
        </div>
        <div class="col-md-4">
          <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
