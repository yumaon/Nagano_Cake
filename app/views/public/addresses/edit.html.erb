<div class="container-fluid">
  <div class="row ml-5 mt-4">
    <h3 class="ml-5">配送先編集</h3>
  </div>

  <div class="my-3">
    <div class="row ml-5 mt-3">
      <div class="col-md-7">
      <%= form_with model: @address do |f| %>

        <div class="form-group row">
          <div class="col-md-3">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-form-label" %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :postal_code, placeholder: "0000000" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3">
            <%= f.label :address, "住所", class: "col-form-label" %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-md-8" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3">
            <%= f.label :name, "宛名" , class: "col-form-label" %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :name, placeholder: "令和道子" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3">
          </div>
          <div class="col-md-9">
            <%= f.submit "変更内容を保存", class: "btn btn-success px-5" %>
          </div>
        </div>

    <% end %>
    </div>
  </div>