<div class="container mt-5">
  <div class="row ml-5">
    <h3>管理者ログイン</h3>
  </div>

  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group row">
        <div class="col-md-4 text-center">
          <%= f.label :email, "メールアドレス", class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "col-md-7" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-4 text-center">
          <%= f.label :password, "パスワード", class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-7" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-4 col-form-label"></div>
        <div class="col-md-7">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
