<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if admin_signed_in? %>
        <li>
          <%= link_to "商品一覧", admin_items_index_path %>
        </li>
        <li>
          <%= link_to "会員一覧", admin_customers_index_path %>
        </li>
        <li>
          <%= link_to "注文履歴一覧", admin_orders_show_path %>
        </li>
        <li>
          <%= link_to "ジャンル一覧", admin_genres_index_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        </li>
      <% elsif customer_signed_in? %>
        <li>
          <%= link_to "マイページ", public_customers_show_path %>
        </li>
        <li>
          <%= link_to "商品一覧", public_items_index_path %>
        </li>
        <li>
          <%= link_to "カート", public_cart_items_index_path %>
        </li>
        <li>
          <%= link_to "ログアウト", estroy_customer_session_path %>
        </li>
      <% else %>
        <li>
          <%= link_to "About" , public_homes_about_path %>
        </li>
        <li>
          <%= link_to "商品一覧", public_items_index_path %>
        </li>
        <li>
          <%= link_to "新規登録", new_customer_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_customer_session_path %>
        </li>
      <% end %>
        
    </header>

    <%= yield %>
  </body>
</html>
